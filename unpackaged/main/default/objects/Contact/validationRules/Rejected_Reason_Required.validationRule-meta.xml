<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rejected_Reason_Required</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED( Stage__c ) &amp;&amp;
 ISPICKVAL(Stage__c, &#39;Rejected&#39;) &amp;&amp;
 ISBLANK(TEXT(Rejected_Reason__c))</errorConditionFormula>
    <errorDisplayField>Rejected_Reason__c</errorDisplayField>
    <errorMessage>A Rejected Reason is required when marking a Contact as Rejected</errorMessage>
</ValidationRule>
