<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Inactive_Reason_Required</fullName>
    <active>true</active>
    <description>Requires a Inactive Reason if the Lead&#39;s Active value is FALSE.</description>
    <errorConditionFormula>ISCHANGED(Active__c ) &amp;&amp; 
Active__c = FALSE &amp;&amp; 
ISPICKVAL(Inactive_Reason__c, &quot;&quot;)</errorConditionFormula>
    <errorDisplayField>Inactive_Reason__c</errorDisplayField>
    <errorMessage>A reason must be selected if the Lead is no longer active.</errorMessage>
</ValidationRule>
