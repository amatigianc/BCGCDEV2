    <environments>Default</environments>
    <formulas>
        <name>CasePriorityEscalated</name>
        <dataType>Boolean</dataType>
        <expression>IF(OR(
AND(ISPICKVAL({!$Record__Prior.Priority}, &quot;P3 - Normal&quot;), OR(ISPICKVAL({!$Record.Priority}, &quot;P2 - Important&quot;), ISPICKVAL({!$Record.Priority}, &quot;P1 - Critical&quot;))),
AND(ISPICKVAL({!$Record__Prior.Priority}, &quot;P2 - Important&quot;), ISPICKVAL({!$Record.Priority}, &quot;P1 - Critical&quot;))),
TRUE, FALSE)</expression>
    </formulas>
