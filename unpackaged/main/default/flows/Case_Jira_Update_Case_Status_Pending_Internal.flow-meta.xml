    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>hasBypassFLOW</targetReference>
        </connector>
        <filterFormula>AND(
{!$Record.RecordType.Name} = &quot;Technical Support&quot;,
NOT(CONTAINS({!$Record.JIRA_Key__c}, &quot;KNOW&quot;)),
ISCHANGED({!$Record.JIRA_Status__c})
,
AND(
{!$Record.JIRA_Status__c} != &quot;In Progress&quot;, 
{!$Record.JIRA_Status__c} != &quot;Backlog&quot;,
{!$Record.JIRA_Status__c} != &quot;In Review&quot;, 
{!$Record.JIRA_Status__c} != &quot;Evaluating&quot;
)
,
OR(
ISPICKVAL({!$Record.Status},&quot;Pending - Fix&quot;), 
ISPICKVAL({!$Record.Status}, &quot;Pending - Fix 30 days&quot;), 
ISPICKVAL({!$Record.Status}, &quot;Pending - Product Enhancement&quot;), 
ISPICKVAL({!$Record.Status}, &quot;Pending - Fix Review&quot;),  
ISPICKVAL({!$Record.Status}, &quot;Pending - ENG Task&quot;)
)
)</filterFormula>
        <object>Case</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
